{
	"env": {
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": false
		},
		"sourceType": "module"
	},

	"extends": "eslint-config-collaborne",

	"overrides": [
		{
			"files": "src/index.js",
			"parserOptions": {
				"sourceType": "script"
			}
		},
		{
			"files": "test/**/*.spec.js",
			"env": {
				"mocha": true
			},
			"rules": {
				"no-unused-expressions": "warn"
			}
		}
	]
}
